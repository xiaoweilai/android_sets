<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <gradient android:startColor="#FFD6D3D6" android:endColor="#FFD6D3D6"
                android:angle="90.0">
            </gradient>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#FFF4E752" android:endColor="#FFF4E752"
                android:angle="90.0">
            </gradient>
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#FFF4E752" android:endColor="#FFF4E752"
                android:angle="90.0">
            </gradient>
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient android:startColor="#FFD6D3D6" android:endColor="#FFD6D3D6"
                android:angle="90.0">
            </gradient>
        </shape>
    </item>
</selector>