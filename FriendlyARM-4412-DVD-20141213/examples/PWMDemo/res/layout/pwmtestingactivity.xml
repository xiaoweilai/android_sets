<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/label1" android:layout_width="fill_parent"
		android:layout_height="20dip" android:text="@string/frequencyText" />
<LinearLayout 
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="40dip" android:gravity="center_horizontal">

	<Button android:layout_height="wrap_content" android:text="@string/subBtnText"
		android:layout_width="60dip" android:id="@+id/btnSub" android:textSize="16dip"></Button>
	
	<EditText android:id="@+id/fEditor" android:layout_width="match_parent"
		android:layout_height="40dip" android:singleLine="true"
		android:numeric="integer" android:editable="true" android:gravity="top" 
		android:text="@string/fInitValue" android:layout_weight="1"/>
		
	<Button android:layout_height="wrap_content" android:text="@string/addBtnText"
		android:layout_width="60dip" android:id="@+id/btnAdd" android:textSize="16dip"></Button>
		
</LinearLayout>
</LinearLayout>

